<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivProfileImage"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TD Account"
        android:id="@+id/tvUsername"
        android:textColor="@color/black_color"
        android:textSize="@dimen/title_text"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/black_color"
        android:textSize="@dimen/body_text"
        android:id="@+id/tvBody"
        android:layout_below="@+id/ivProfileImage"
        android:autoLink="all"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\@smulyono"
        android:id="@+id/tvScreenname"
        android:textSize="@dimen/small_text"
        android:textColor="@color/light_black_color"
        android:layout_below="@+id/tvUsername"
        android:layout_alignLeft="@id/tvUsername"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvFavText"
        android:text="Favorites"
        android:textColor="@color/light_black_color"
        android:textAllCaps="true"
        android:layout_below="@id/tvBody"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30"
        android:id="@+id/tvFavcount"
        android:textSize="@dimen/large_text"
        android:textColor="@color/black_color"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:layout_below="@id/tvFavText"
        android:layout_marginRight="15dp"
        android:layout_alignLeft="@id/tvFavText"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Retweets"
        android:id="@+id/tvRetweetText"
        android:textColor="@color/light_black_color"
        android:textAllCaps="true"
        android:gravity="right"
        android:layout_below="@id/tvBody"
        android:layout_toRightOf="@id/tvFavText"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10"
        android:id="@+id/tvRetweet"
        android:textSize="@dimen/large_text"
        android:textColor="@color/black_color"
        android:textStyle="italic"
        android:gravity="right"
        android:layout_below="@id/tvRetweetText"
        android:layout_alignLeft="@id/tvRetweetText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2 hour ago"
        android:textSize="@dimen/small_text"
        android:textStyle="italic"
        android:id="@+id/tvTimestamp"
        android:textColor="@color/light_black_color"
        android:gravity="center"
        android:layout_below="@id/tvFavcount"
        android:layout_alignLeft="@id/tvFavcount"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivRetweetIcon"
        android:src="@mipmap/ic_retweet"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/tvTimestamp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivFavoriteIcon"
        android:src="@mipmap/ic_star"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/tvTimestamp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/ivRetweetIcon"
        />

</RelativeLayout>